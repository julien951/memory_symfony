{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
<center><div class="container d-flex justify-content-center align-items-center min-vh-100" style="background-color: #f8f9fa;">
    <div class="card shadow-sm p-4" style="max-width: 400px; width: 100%; border-radius: 10px;">
        <form method="post" class="form-signin">
            {% if error %}
                <div class="alert alert-danger" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}


            <h1 class="h4 text-center mb-4 font-weight-normal">Connectez-vous</h1>

            <div class="form-group mb-3">
                <label for="inputEmail" class="sr-only">Email</label>
                <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control rounded-pill shadow-sm" placeholder="Email address" autocomplete="email" required autofocus aria-label="Email" style="border: 1px solid #ced4da; padding: 0.75rem;">
            </div>

            <div class="form-group mb-3">
                <label for="inputPassword" class="sr-only">Mot de passe</label>
                <input type="password" name="password" id="inputPassword" class="form-control rounded-pill shadow-sm" placeholder="Password" autocomplete="current-password" required aria-label="Password" style="border: 1px solid #ced4da; padding: 0.75rem;">
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <div class="form-group form-check mb-3">
                <input type="checkbox" class="form-check-input" name="_remember_me" id="rememberMe">
                <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
            </div>
</br>

            <button class="btn btn-lg btn-primary btn-block rounded-pill shadow-sm" type="submit" style="background-color: #007bff; border: none;">
                Sign in
            </button>
            </center>
            
            <p class="text-center mt-4 text-muted">&copy; 2024</p>
        </form>
    </div>
</div>
{% endblock %}
